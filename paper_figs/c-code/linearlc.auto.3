import numpy as np

# continue down through minimum (continue along contour value)
sln2 = loadbd('linearlc-descent')
sln3 = []
for pt in sln2():
    sln3 = sln3 + run(pt, c='linearlc.3')
    sln3 = sln3 + run(pt, c='linearlc.3', DS='-')

# save output
save(sln3,'linearlc-full')
np.array(sln3.toArray()).dump('./linearlc-full.pkl')

print "\n***Clean the directory***"
cl()
